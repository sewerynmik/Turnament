@model Turnament.ViewModel.Team.CreateViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5" style="max-width: 400px;">
    <h1>Załóż nową druzynę</h1>

    <hr/>

    <form asp-action="Create" style="display: flex; flex-direction: column;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-2" style="align-self: center">
            <button asp-action="Index" class="btn btn-danger me-2">Anuluj</button>
            <button type="submit" class="btn btn-primary">Zapisz</button>
        </div>
    </form>
</div>
@model Turnament.ViewModel.Team.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="max-width: 600px">
    
    <h1>Edytuj nazwę drużyny</h1>
    <hr/>
    
    <form asp-action="Edit" style="display: flex; flex-direction: column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>

        <div class="form-group mt-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-2" style="align-self: center">
            <a asp-action="Index" class="btn btn-danger me-2">Anuluj</a>
            <button type="submit" class="btn btn-primary">Zapisz</button>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

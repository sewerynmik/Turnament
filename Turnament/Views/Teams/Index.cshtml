@model IEnumerable<Turnament.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<div style="display: flex; flex-direction: row;justify-content: space-between; align-items: center">
    <h1>Drużyny</h1>

    <a asp-action="Create" class="btn btn-success">Załóż nową drużynę!</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Data założenia
        </th>
        <th>
            Założyciel
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Creator.Id">
                    @Html.DisplayFor(modelItem => item.Creator.Username)
                </a>
            </td>
            <td style="text-align: end">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Zobacz</a>
            </td>
        </tr>
    }
    </tbody>
</table>

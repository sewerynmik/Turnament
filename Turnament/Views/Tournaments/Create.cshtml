@model Turnament.ViewModel.Tournament.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5" style="max-width: 400px">
    <h1>Create</h1>

    <form asp-action="Create" method="post" style="display: flex; flex-direction: column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="SportId" class="control-label"></label>
            <select asp-for="SportId" class="form-control" asp-items="ViewBag.SportId"></select>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="BracketTypeId" class="control-label"></label>
            <select asp-for="BracketTypeId" class="form-control" asp-items="ViewBag.BracketTypeId"></select>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control"/>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2" style="align-self: center">
            <button asp-action="Index" class="btn btn-danger me-2">Anuluj</button>
            <button type="submit" class="btn btn-primary">Utw√≥rz</button>
        </div>
    </form>


</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

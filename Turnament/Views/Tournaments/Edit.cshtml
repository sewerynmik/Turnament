@model Turnament.ViewModel.Tournament.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="max-width: 400px">
    <h1>Edytuj dane turnieju</h1>


    <form asp-action="Edit" style="display: flex; flex-direction: column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="SportId" class="control-label"></label>
            <select asp-for="SportId" class="form-control" asp-items="ViewBag.SportId"></select>
            <span asp-validation-for="SportId" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="BracketTypeId" class="control-label"></label>
            <select asp-for="BracketTypeId" class="form-control" asp-items="ViewBag.BracketTypeId"></select>
            <span asp-validation-for="BracketTypeId" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control"/>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        @if (ViewBag.WinnerTeamId != null)
        {
            <div class="form-group mt-2">
                <label asp-for="WinnerTeamId" class="control-label"></label>
                <select asp-for="WinnerTeamId" class="form-control" asp-items="ViewBag.WinnerTeamId"></select>
                <span asp-validation-for="WinnerTeamId" class="text-danger"></span>
            </div>
        }
        <div class="form-group mt-2" style="display: flex; justify-content: center">
            <a class="btn btn-danger me-2" asp-action="Details" asp-route-id="@Model.Id">Anuluj</a>
            <button type="submit" class="btn btn-primary">Zapisz</button>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

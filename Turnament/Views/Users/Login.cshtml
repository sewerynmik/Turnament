@model Turnament.ViewModel.User.LoginViewModel
@{
    ViewData["title"] = "Logowanie";
}


<div class="container mt-5" style="max-width: 400px">
    <form asp-action="Login" method="post" style="display: flex; flex-direction: column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Pass"></label>
            <input asp-for="Pass" class="form-control">
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2" style="align-self: center">Zaloguj</button>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}

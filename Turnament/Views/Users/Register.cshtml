@model Turnament.ViewModel.User.RegisterViewModel
@{
    ViewData["title"] = "Rejestracja";
}

<div class="container mt-5" style="max-width: 400px">
    <form method="post" asp-action="Register" style="display: flex; flex-direction: column">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="Pass"></label>
            <input asp-for="Pass" class="form-control">
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-2">
            <label asp-for="ConfirmPass"></label>
            <input asp-for="ConfirmPass" class="form-control">
            <span asp-validation-for="ConfirmPass" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary mt-2" style="align-self: center">Zarejestruj</button>
    </form>
</div>

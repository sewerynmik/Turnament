@model IEnumerable<Tournament>

<h2>Turnieje użytkownika</h2>

<table class="table">
    <thead>
    <tr>
        <th>Nazwa</th>
        <th>Data rozpoczęcia</th>
        <th>Data zakończenia</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var tournament in Model)
    {
        <tr>
            <td>@tournament.Name</td>
            <td>@tournament.StartDate?.ToShortDateString()</td>
            <td>@tournament.EndDate?.ToShortDateString()</td>
            <td>
                <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-info">Szczegóły</a>
            </td>
        </tr>
    }
    </tbody>
</table>